<%= form_with(model: register, local: true) do |form| %>
  <% if register.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(register.errors.count, "error") %> prohibited this register from being saved:</h2>

      <ul>
      <% register.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <!--
  <div class="field">
    <= form.label :user_id >
    <= form.text_field :user_id >
  </div>
  -->
  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="field">
    <%= form.label :course_offering_id %>
    <%= form.text_field :course_offering_id,value: 1 %>
  </div>
  <% if current_user.role.name=="Admin" %>
      <div class="field">
        <%= form.label :grade %>
        <%= form.text_field :grade %>
       </div>
  <% else %>
    <%= form.hidden_field :grade, value: "N" %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
